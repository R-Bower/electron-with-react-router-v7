{
  "name": "electron-with-vite-remix",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "out/main/index.mjs",
  "scripts": {
    "dev": "pnpm build:main && pnpm build:preload && DEV_SERVER=1 electron .",
    "dev:renderer": "pnpm exec electron dev-server.mjs",
    "remix:ssr": "pnpm build:main && pnpm build:preload && pnpm build:renderer && NODE_ENV=production pnpm exec electron dev-server.mjs",
    "build:main": "vite build --config ./src/main/vite.config.ts",
    "build:preload": "vite build --config ./src/preload/vite.config.ts",
    "build:renderer": "remix vite:build ./src/renderer",
    "build:unpack": "pnpm build:renderer && pnpm build:main && pnpm build:preload && electron-builder --dir"
  },
  "dependencies": {
    "@remix-run/express": "^2.15.0",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "electron-serve": "^2.1.1",
    "electron-store": "^10.0.0",
    "express": "^4.21.1",
    "mime": "^4.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "isbot": "^5.1.17",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b",
  "exports": {
    ".": {
      "import": "./out/main/index.mjs"
    }
  },
  "author": "tmtk75"
}
